<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89AF8A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="80sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bC" />

    <Button
        android:id="@+id/bC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="C"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/bplusminus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="+-"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/bC"
        app:layout_constraintTop_toBottomOf="@id/textview"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/bpercent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="%"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/bplusminus"
        app:layout_constraintTop_toBottomOf="@id/textview"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/bdevide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="/"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/bpercent"
        app:layout_constraintTop_toBottomOf="@id/textview"
        app:layout_constraintWidth_percent="0.25"
        />


    <Button
        android:id="@+id/b7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="7"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bC"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/b8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="8"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/b7"
        app:layout_constraintTop_toBottomOf="@id/bC"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/b9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="9"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/b8"
        app:layout_constraintTop_toBottomOf="@id/bC"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/bX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="X"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/b9"
        app:layout_constraintTop_toBottomOf="@id/bC"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/b4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b7"
        app:layout_constraintWidth_percent=".25"
        android:layout_margin="2dp" />

    <Button
        android:id="@+id/b5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="5"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/b4"
        app:layout_constraintTop_toBottomOf="@id/b7"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/b6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="6"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/b5"
        app:layout_constraintTop_toBottomOf="@id/b7"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/bminus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="-"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/b6"
        app:layout_constraintTop_toBottomOf="@id/b7"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/b1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="1"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b4"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="2"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/b1"
        app:layout_constraintTop_toBottomOf="@id/b4"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/b3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="3"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/b2"
        app:layout_constraintTop_toBottomOf="@id/b4"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/bplus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="+"
        android:textSize="40sp"
        app:layout_constraintLeft_toRightOf="@id/b3"
        app:layout_constraintTop_toBottomOf="@id/b4"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/b0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b1"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/bdot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="."
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/b0"
        app:layout_constraintTop_toBottomOf="@id/b1"
        app:layout_constraintWidth_percent=".25" />

    <Button
        android:id="@+id/bequals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:backgroundTint="#DA2929"
        android:text="="
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bdot"
        app:layout_constraintTop_toBottomOf="@id/b1"
        app:layout_constraintWidth_percent=".50" />

</androidx.constraintlayout.widget.ConstraintLayout>